	g     = log --all --graph --oneline --date-order --format='%C(yellow)%h%Creset%Cred%d%Creset %C(blue)-%Creset %s (%C(bold)%an%Creset, %C(cyan)%cr%Creset)'
	b = branch
	bav = branch -avv
